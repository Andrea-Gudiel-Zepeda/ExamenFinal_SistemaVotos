@model BD_Bicicletas.Candidato;

@{
    ViewData["Title"] = "Editar Candidato";
}



<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form asp-action="EditBici">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-md-6 col-lg-6 col-sm-12">
                                        <label asp-for="Nombre" class="control-label"></label>
                                        <input asp-for="Nombre" class="form-control" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-12">
                                        <label asp-for="Partido" class="control-label"></label>
                                        <input asp-for="Partido" type="file" class="form-control" />
                                        <span asp-validation-for="Partido" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Grabar" class="btn btn-primary" /> <a asp-action="BicicletumList" class="btn btn-danger">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
