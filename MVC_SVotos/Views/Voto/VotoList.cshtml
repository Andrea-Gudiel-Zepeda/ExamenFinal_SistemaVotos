@model IEnumerable<BD_SVotos.Voto>

@{
    ViewData["Title"] = "Listado de Votos";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Voto1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CandidatoId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VotanteId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaHora)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ip)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Voto1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CandidatoId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VotanteId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaHora)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ip)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="card-footer">
                        <a asp-action="CreateVoto" class="btn btn-primary">Crear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
