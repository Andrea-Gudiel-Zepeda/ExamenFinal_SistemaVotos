@model BD_SVotos.Voto;

@{
    ViewData["Title"] = "Crear Voto";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form asp-action="CreateBici">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Voto1" class="control-label"></label>
                                    <input asp-for="Voto1" type="number" min="0" max="1" class="form-control" />
                                    <span asp-validation-for="Voto1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="CandidatoId" class="control-label">Tipo</label>
                                        <select asp-for="CandidatoId" class="form-control" asp-items="@ViewBag.Tiposls"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Crear" class="btn btn-primary" /> <a asp-action="VotoList" class="btn btn-danger">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

