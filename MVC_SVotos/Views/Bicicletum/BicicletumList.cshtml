@model IEnumerable<BD_Bicicletas.Candidato>

@{
    ViewData["Title"] = "Listado de Bicicletas";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Imagen)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Marca)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tamaño)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CantidadPlatos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CantidadPiñones)
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Imagen)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Marca)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tamaño)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CantidadPlatos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CantidadPiñones)
                                    </td>

                                    <td>
                                        <a asp-action="EditBici" asp-route-id="@item.Id">Editar</a> |
                                        <a asp-action="DetailsBici" asp-route-id="@item.Id">Detalles</a> |
                                        <a asp-action="DeleteBici" asp-route-id="@item.Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="card-footer">
                        <a asp-action="CreateBici" class="btn btn-primary">Crear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
